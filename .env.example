# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/vca_db

# Application Configuration
APP_ENV=development
APP_NAME=VCA
DEBUG=true

# Redis Configuration (REQUIRED for AI call state management)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration (REQUIRED for AI audio loop)
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Settings (OPTIONAL - defaults provided)
STT_MODEL=whisper-1
LLM_MODEL=gpt-4
TTS_MODEL=tts-1
TTS_VOICE=alloy

# Conversation Limits (OPTIONAL - defaults provided)
MAX_CONVERSATION_TURNS=20
MAX_CONVERSATION_DURATION_SECONDS=300

# ARI Configuration (REQUIRED for audio streaming with Asterisk)
ARI_URL=http://localhost:8088
ARI_USERNAME=asterisk
ARI_PASSWORD=asterisk

# Telephony Configuration (for future use)
# SIP_TRUNK_HOST=your_sip_host
# SIP_TRUNK_USER=your_sip_user
# SIP_TRUNK_PASSWORD=your_sip_password

# Supabase Configuration (REQUIRED for authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Development Auth Bypass (OPTIONAL - default OFF)
# WARNING: Only enable in development environments for testing purposes
# DEV_AUTH_BYPASS=false
